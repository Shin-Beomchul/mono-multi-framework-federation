{
  "name": "hive",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^20",
    "pnpm": "^9"
  },
  "scripts": {
    "build:remotes": "pnpm --parallel --filter \"./apps/remote-*\" build",
    "build:remotes:watch": "pnpm --parallel --filter \"./apps/remote-*\" build:watch",
    "preview:remotes": "pnpm --parallel --filter \"./apps/remote-*\" preview",
    "dev:host": "pnpm --filter hive dev",
    "dev:remote": "pnpm --filter remote-react1 dev",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.14",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.2.2"
  }
}
